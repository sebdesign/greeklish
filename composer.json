{
    "name": "skapator/greeklish",
    "type": "helper",
    "description": "Converts Greek characters to latin. Used for slugs mainly",
    "keywords": ["greeklish", "laravel", "laravel5", "laravel6"],
    "homepage": "https://github.com/skapator/greeklish",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "skapator",
            "email": "skapator@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "illuminate/support": "^5.5|^6.0|^7.0"
    },
    "autoload": {
        "psr-0": {
            "Skapator\\Greeklish": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Skapator\\Greeklish\\GreeklishServiceProvider"
            ],
            "aliases": {
                "Greeklish": "Skapator\\Greeklish\\Facades\\Greeklish"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
